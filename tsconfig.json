{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "noEmit": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "emitDeclarationOnly": false,
    "composite": false
  },
  "ts-node": {
    "files": false,
    "typeCheck": false,
    "transpileOnly": true,
    "require": ["typescript-transform-paths/register"],
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "es2016",
      "module": "commonjs"
    }
  }
}
