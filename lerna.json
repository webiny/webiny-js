{
  "packages": [
    "packages/*"
  ],
  "version": "5.12.0",
  "npmClient": "yarn",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json",
        "api/**",
        "apps/**"
      ],
      "conventionalCommits": true,
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): publish %s :tada: :rocket:"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
