{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "browsers": ["last 2 versions", "safari >= 7"]
      }
    }],
    "@babel/preset-react",
    "@babel/preset-flow"
  ],
  "plugins": [
    ["@babel/plugin-proposal-class-properties"],
    ["babel-plugin-emotion", { "autoLabel": true }],
    ["babel-plugin-named-asset-import", {
      "loaderMap": {
        "svg": {
          "ReactComponent": "@svgr/webpack![path]"
        }
      }
    }]
  ]
}

