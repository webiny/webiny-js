{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [
    {
      "path": "../app"
    },
    {
      "path": "../app-admin"
    },
    {
      "path": "../app-page-builder"
    },
    {
      "path": "../app-security"
    },
    {
      "path": "../form"
    },
    {
      "path": "../react-router"
    },
    {
      "path": "../ui"
    },
    {
      "path": "../validation"
    }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/app/*": ["../app/src/*"],
      "@webiny/app": ["../app/src"],
      "@webiny/app-admin/*": ["../app-admin/src/*"],
      "@webiny/app-admin": ["../app-admin/src"],
      "@webiny/app-page-builder/*": ["../app-page-builder/src/*"],
      "@webiny/app-page-builder": ["../app-page-builder/src"],
      "@webiny/app-security/*": ["../app-security/src/*"],
      "@webiny/app-security": ["../app-security/src"],
      "@webiny/form/*": ["../form/src/*"],
      "@webiny/form": ["../form/src"],
      "@webiny/react-router/*": ["../react-router/src/*"],
      "@webiny/react-router": ["../react-router/src"],
      "@webiny/ui/*": ["../ui/src/*"],
      "@webiny/ui": ["../ui/src"],
      "@webiny/validation/*": ["../validation/src/*"],
      "@webiny/validation": ["../validation/src"]
    },
    "baseUrl": "."
  }
}
