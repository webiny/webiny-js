{
  "extends": "../../tsconfig.build.json",
  "include": ["src"],
  "references": [
    {
      "path": "../i18n"
    }
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/i18n/*": ["../i18n/src/*"],
      "@webiny/i18n": ["../i18n/src"]
    },
    "baseUrl": "."
  }
}
