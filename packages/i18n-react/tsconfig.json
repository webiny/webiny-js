{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [{ "path": "../i18n" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/i18n/*": ["../i18n/src/*"],
      "@webiny/i18n": ["../i18n/src"]
    },
    "baseUrl": "."
  }
}
