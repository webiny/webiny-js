{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [{ "path": "../pulumi-app" }, { "path": "../api-page-builder" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/pulumi-app/*": ["../pulumi-app/src/*"],
      "@webiny/pulumi-app": ["../pulumi-app/src"],
      "@webiny/api-page-builder/*": ["../api-page-builder/src/*"],
      "@webiny/api-page-builder": ["../api-page-builder/src"]
    },
    "baseUrl": "."
  }
}
