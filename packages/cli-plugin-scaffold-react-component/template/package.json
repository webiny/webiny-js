{
  "name": "[PACKAGE_NAME]",
  "version": "1.0.0",
  "description": "A simple React component that can be imported into the application.",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist '*.tsbuildinfo' && babel src -d dist --source-maps --copy-files --extensions \".ts,.tsx\" && yarn postbuild",
    "watch": "babel src -d dist --source-maps --copy-files --extensions \".ts,.tsx\" --watch",
    "postbuild": "cp package.json dist/ && tsc -p tsconfig.build.json"
  },
  "dependencies": {
    "react": "^16.14.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@types/react": "^16.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3",
    "jest-dynalite": "^3.3.1",
    "@shelf/jest-elasticsearch": "^1.0.0",
    "@webiny/handler-aws": "^5.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
