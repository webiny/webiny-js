{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/cli-plugin-scaffold/*": ["../cli-plugin-scaffold/src/*"],
      "@webiny/cli-plugin-scaffold": ["../cli-plugin-scaffold/src"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"]
    },
    "baseUrl": "."
  }
}
